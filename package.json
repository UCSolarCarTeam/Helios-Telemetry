{
  "name": "root",
  "private": true,
  "scripts": {
    "dev": "concurrently --names client,server --prefix-colors green,#DD00FF --kill-others \"cd client && npm run dev\" \"cd server && npm run dev\"",
    "build": "concurrently --names client,server --prefix-colors green,#DD00FF --kill-others \"cd client && npm run build\" \"cd server && npm run build\"",
    "start": "concurrently --names client,server --prefix-colors green,#DD00FF --kill-others \"cd client && npm start\" \"cd server && npm start\"",
    "dev:client": "cd packages/client && npm run dev",
    "dev:server": "cd packages/server && npm run dev",
    "start:client": "cd packages/client && npm start",
    "start:server": "cd packages/server && npm start",
    "build:client": "cd packages/client && npm run build",
    "build:server": "cd packages/server && npm run build",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "log4js": "^6.9.1",
    "module-alias": "^2.2.3",
    "socket.io": "^4.7.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/amplify": "^1.1.28",
    "@types/eslint": "^8.56.3",
    "@types/express": "^4.17.21",
    "@types/googlemaps": "^3.43.3",
    "@types/log4js": "^2.3.5",
    "@types/node": "^20.11.20",
    "@types/prettier": "^3.0.0",
    "@types/react": "^18.2.58",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "autoprefixer": "^10.0.1",
    "aws-cdk": "^2.130.0",
    "aws-cdk-lib": "^2.133.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-tailwindcss": "^3.14.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.3",
    "lerna": "^8.1.3"
  }
}
