{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "plotly.js-dist-min": ["node_modules/@types/plotly.js"],
      "@/*": ["./src/*", "./public/*"],
      "@/server/*": ["../server/src/*"]
    },
    "jsx": "preserve",
    "types": ["node"] // if you are missing global types, you may have to add them here.
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.mjs"],
  "exclude": ["node_modules", "tailwind.config.ts"]
}
