{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/client/*": [
        "../client/src/*"
      ]
    }
  },
  "include": [
    ".eslint.config.mjs",
    "src/**/*",
    "**/*.cjs",
    "**/*.mjs",
    ".eslintrc.cjs"
  ],
  "exclude": [
    "dist",
    "../client"
  ]
}