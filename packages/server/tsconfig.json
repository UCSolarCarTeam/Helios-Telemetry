{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["es2020"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "types": ["node"] // if you are missing global types, you may have to add them here.
  },
  "include": ["src/**/*", "**/*.cjs", "**/*.mjs"],
  "exclude": ["dist", "../client"]
}
