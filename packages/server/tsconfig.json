{
  "compilerOptions": {
    "module": "node16",
    "esModuleInterop": true,
    "target": "es2020",
    "noImplicitAny": false,
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": [".eslintrc.cjs", "src/**/*", "**/*.cjs", "**/*.mjs"],
  "exclude": [
    "dist",
    "../client",
    "../../node_modules",
    "node_modules",
    "**/node_modules"
  ]
}
