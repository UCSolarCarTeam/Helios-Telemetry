{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es2020",
    "noImplicitAny": false,
    "moduleResolution": "bundler",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": [".eslintrc.cjs", "src/**/*", "**/*.cjs", "**/*.mjs"],
  "exclude": ["dist", "../client"]
}
