{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2020",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/client/*": ["../client/src/*"]
    }
  },
  "include": [".eslint.config.mjs", "src/**/*", "**/*.cjs", "**/*.mjs"],
  "exclude": ["dist", "../client"]
}
